                <% listeOrg.forEach((listeOrg) => { %>
                    <div id="OrgItem" class="w-100 bg-secondary p-2 rounded text-white d-flex flex-column justify-content-between px-4">
                        <div id="OrgTitle" class="row justify-content-between w-100 m-1">
